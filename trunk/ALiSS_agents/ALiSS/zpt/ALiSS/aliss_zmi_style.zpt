/* ***general */

li {
	font-size:10pt;
}
ul {
	margin-top:0;
	margin-bottom:1em;
}

body {
	font-family: verdana, arial;
}


th {
	vertical-align:top;
	text-align:left;
	padding-right:10pt;
}

td {
	vertical-align:top;
}

fieldset,td{
	font-size:10pt;
}


input {
	font-size:100%;
}

caption {
	font-size:10pt;
}

.xsize {
	font-size:10pt;
	border-bottom:1px solid #dddddd;
}

legend {
	font-weight:bold;
}

/* ***zope css */
.system-msg {
	font-family: Verdana, Helvetica, sans-serif; 
	font-size: 10pt; 
	background-color: #ffffff;
	border:  1px solid #000000;
	margin-bottom: 6px;
	margin-top: 6px;
	margin-left: 3px;
	padding: 4px;
	width: 95%;
	color: #660033;
}

.list-header td{
	background-color: #c0c0c0;
	color: black;
}

.list-header th{
	background-color: #c0c0c0;
	color: black;
	padding-right:0px;
}

.update_info th{
	background-color: #c0c0c0;
	color: black;
	padding: 0.2em 0.5em 0.2em 0.3em;
}

.row-hilite td a{
	font-size: 10pt;
}

.row-normal td a{
	font-size: 10pt;
}


/* ***content groups page */
.menu {
	border-right: 1px dashed #cccccc;
	margin: 0em 0em 0em 0em;
	padding: 0em 0em 0em 0em;
	border-bottom: 1px solid white;
	width: 100%;
	font-size: 10pt;
}

.menu li{
	list-style: none;
	text-indent: 1em;
	margin-top: 6px;
}

.menu li a{
	padding-left: 1.5em;
	color: #006699;
}

.menu li a:hover{
	color: black;
}

.menu div{
	border-bottom: 1px solid #cccccc;
	margin: 0em 1em 0em 1em;
	font-weight: bold;
	font-size: 10pt;
	background-color: #f0f0f0;
	color: #444444;
}


/* ***google update page */
.group_legend{
	margin: 0em;
	padding: 0em;
}

.group_legend li{
	list-style: none;
}

.group_info{
	border-left: 2px solid #f0f0f0;
}

.group_actions div input{
	width: 180px;
	margin-right: 10px;
}


/* ***default content groups page */
.cg_default legend{
	color: #333333;
	font-weight: bold;
}

.cg_default th{
	background-color: #c0c0c0;
	color: black;
}

.list_and_info {
	position: relative;
	border:1px solid #666666;
	margin-left: 5%;
	margin-right: 5%;
}
.groups_list {
	float: right;
	width: 10em;
}

.update_info {
	float: left;
	width: 100%;
}

.update_info_block th{
	width:20%;
}

.update_info td{
	padding-left: 5px;
}

.update_info_block {
	width: 70%;
	text-align: left;
	float: left;
}
.clearall {
	clear: both;
	font-size: 0.1em;
	line-height: 0em;
}

/* ***google update page */
.update_title{
	border-bottom: 1px solid #cccccc;
	margin: 0em 1em 0em 1em;
	font-weight: bold;
	font-size: 10pt;
	background-color: #f0f0f0;
	color: #444444;
	text-align: center;
}

.update_info ul{
	padding-top: 0px;
	margin-top:0px;
	padding-bottom: 0px;
	margin-bottom:0px;
}

.content_groups_list{
	float: right;
	width: 13em;
	border-left: 1px solid #cccccc;
	padding-left: 3px;
	padding-right: 3px;
}

.content_groups_list div{
	font-weight: bold;
	background-color: #f0f0f0;
	border-bottom: 1px solid #cccccc;
}

/* ***manage elements page */
.me_title{
	background-color: #f0f0f0;
	font-weight: bold;
}

.me_google_container{
	border: 1px solid black;
	margin-bottom: 3px;
	background-color: #fafafa;
}

.me_google_container td div{
	border-bottom: 1px solid #006699;
}

.me_google_container li{
	font-size: 10pt;
}

.me_google_container li div{
	border: none;
}

.me_google_container li a{
	font-size: 10pt;
}

.general_info{
	width: 35%;
	margin-left: auto;
	margin-right: auto;
	border: 1px solid #006699;
}

.general_info caption{
	margin-left: auto;
	margin-right: auto;
	text-align: center;
	color: #006699;
}

.general_info td{
	padding-left: 40px;
}

.general_info a{
	color: red;
	text-decoration: underline;
	font-size: 10pt;
}

.google_info{
	color: #006699;
	font-weight: bold;
}

.google_info small{
	color: black;
	font-weight: bold;
}

.google_info span{
	color: black;
	font-weight: normal;
	font-size:8pt;
}

.google_info input{
	font-size: 10pt;
}

.google_info #google_update{
	border-top: 1px solid #006699;
	border-bottom: none;
	padding-top: 2px;
	text-align: center;
}

.content_lists{
	border-top: 1px solid #cccccc;
	border-bottom: 1px solid #cccccc;
}

.content_buttons{
	background-color: #f0f0f0;
	padding-top: 3px;
	padding-bottom: 3px;
	text-indent: 1em;
}

.content_buttons span{
	margin-left: 30px;
}

.content_buttons form{
	padding: 0px;
	margin: 0px;
}


/* ***general */
.standard_legend{
	color: #333333;
	font-size: 10pt;

	font-weight: bold;
}

.standard_caption{
	text-align: left;
}

.standard_container{
	width: 80%;
}

.red{
	color: red;
}

.green{
	color: green;
}